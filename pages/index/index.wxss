@import '../../static/iconfont/iconfont.wxss';
/* 页面 */
.index-container{
  height: 100%;
}

/* 轮播图 */
.index-banner{
  margin-bottom: 30rpx;
}
.banner .banner-item image{
  width: 100%;
  height: 100%;
}

/* 导航栏 */
.index-nav{
   display: flex;
  justify-content: space-around;
}
.index-nav .nav-item{
  display: flex;
 flex-direction: column;
 justify-content: center;
 align-items: center;
}
.iconfont {
  font-family:"iconfont" !important;
  font-size: 24px;
  font-style: normal;
  background-color: #ff0000;
  height:100rpx;
  width: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50%;
  color: white;
  margin-bottom: 20rpx;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.index-nav .nav-item .nav-text{
  font-size: 28rpx;
}

/* 推荐歌曲 */
/* ------- */
.recommend .recommend-img{
    display: flex;
    height: 300rpx;
}
.recommend .recommend-img .item{
  margin-right: 20rpx;
  width: 200rpx;
}
.recommend .recommend-img .item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 30rpx;
}
.recommend .recommend-img .item text{
    /* 多行文本内容溢出 */
    /* https://developer.mozilla.org/zh-CN/docs/Web/CSS/-webkit-line-clamp */
    display: -webkit-box;
    font-size: 30rpx;
    overflow: hidden;
    /* white-space: nowrap; */
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

