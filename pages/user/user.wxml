<view class="user-container">
    <!-- 用户信息 -->
    <view class="userinfo">

        <view class="bg">
            <image src="../../static/images/yu.jpg" mode="" />
        </view>
        <view class="user">
            <image class="avater" src="../../static/images/scout.jpg" mode="" bindtap="loginHandler" />
            <text class="nickname">游客</text>
        </view>
        <!-- vip -->
        <view class="vip">
            <view class="card">
                <view class="top">
                    <text class="iconfont icon-huiyuan"></text>
                    <text class="viptext">网易会员</text>
                    <view class="vipbtn">立即开通</view>
                </view>
                <view class="inner">
                    <text>wangyi VIP</text>
                </view>
                <view class="foot">
                    <text>开通会员听歌，享受至尊优惠</text>
                </view>
            </view>
        </view>

    </view>
    <!-- bottom -->
    <view class="nav" bindtouchstart="touchstartHandler" bindtouchmove="touchmoveHandler" bindtouchend="touchendHandler" style="transform: translateY({{translateY}}); transition: {{transition}};">
        <image class="arc" src="../../static/images/personal/arc.png" mode="" />
        <view class="content">
           <!-- 导航栏 -->
            <view class="navs">
                <view class="nav-item">
                    <image src="../../static/images/msg.png" mode=""/>
                    <text class="nav-text">我的消息</text>
                </view>
                <view class="nav-item">
                    <image src="../../static/images/friend.png" mode=""/>
                    <text class="nav-text">我的好友</text>
                </view>
                <view class="nav-item">
                    <image src="../../icons/people_select.png" mode=""/>
                    <text class="nav-text">个人主页</text>
                </view>
                <view class="nav-item">
                    <image src="../../static/images/beauti.png" mode=""/>
                    <text class="nav-text">个性装扮</text>
                </view>
            </view>
            <!-- 最近播放 -->
            <view class="recently">
                <text class="text">最近播放</text>
                <scroll-view scroll-x enable-flex class="item-outer">
                     <view class="item">
                    <text>11</text>
                    <image src="../../static/images/scout.jpg" mode=""/>
                     </view>
                     <view class="item">
                    <text>11</text>
                    <image src="../../static/images/scout.jpg" mode=""/>
                     </view>
                     <view class="item">
                    <text>11</text>
                    <image src="../../static/images/scout.jpg" mode=""/>
                     </view>
                </scroll-view>
                <text>暂无记录</text>
            </view>
            <!-- 其他 -->
            <view class="music">
                <text>我的音乐</text>
                <text>></text>
            </view>
            <view class="music">
                <text>我的收藏</text>
                <text>></text>
            </view>
            <view class="music">
                <text>我的电台</text>
                <text>></text>
            </view>
        </view>
    </view>




</view>