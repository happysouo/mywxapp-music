@import '../../static/iconfont/iconfont.wxss';

.user-container {
    height: 100%;
    width: 100%;
}

/* 用户信息 - 头像+名称 */
.userinfo {
    position: relative;
}

.userinfo .bg {
    width: 100%;
    height: 650rpx;
}

.userinfo .bg image {
    width: 100%;
    height: 650rpx;
    filter: blur(1.5px);
}

.userinfo .user {
    width: 100%;
    display: flex;
    align-items: center;
    position: absolute;
    top: 100rpx;
    left: 40rpx;
}

.userinfo .user .avater {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 2px solid white;
}

.userinfo .user .nickname {
    margin-left: 20rpx;
    font-size: 28rpx;
}

/* 用户信息 - VIP - */
.vip {
    position: absolute;
    width: 90%;
    top: 300rpx;
    left: 40rpx;
}

.vip .card {
    width: 100%;
    height: 350rpx;
    color: #f6e5a3;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    background-color: rgba(0, 0, 0, .7);
}

.vip .card .top {
    display: flex;
    margin-top: 22rpx;
    margin-bottom: 30rpx;
}

.vip .card .top .viptext {
    font-size: 24rpx;
}

.vip .card .top .vipbtn {
    padding: 5rpx 20rpx;
    color: rgba(0, 0, 0, .7);
    font-size: 24rpx;
    border-radius: 30rpx;
    background-color: #f6e5a3;
}

.vip .card .inner {
    margin-bottom: 15rpx;
}

.vip .card .foot {
    font-size: 24rpx;
}

/* 导航栏 */
.nav {
    position: relative;
    height: 100%;
    top: -180rpx;
    background-color: #f5f5f5;
}

.nav .arc {
    position: absolute;
    width: 100%;
    height: 40rpx;
    top: 0rpx;
}

.nav .content {
    position: absolute;
    top: 40rpx;
    width: 90%;
    padding: 0 40rpx;
    background-color: #f5f5f5;

}

.nav .content .navs {
    display: flex;
    justify-content: space-around;
    background-color: rgb(255, 255, 255);
    border-radius: 20rpx;
}

.nav .content .navs .nav-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.nav .content .navs .nav-item image {
    width: 50rpx;
    height: 50rpx;
    padding: 20rpx;
}

.nav .content .navs .nav-item .nav-text {
    font-size: 30rpx;
    padding-bottom: 20rpx;
}

/* 最近播放 */
.nav .content .recently {
    font-size: 30rpx;
    margin-top: 20rpx;
    background-color: rgb(255, 255, 255);
    border-radius: 20rpx;
    padding-left: 20rpx;
}

.nav .content .recently .text {
    float: left;
    margin-top: 38rpx;
    margin-bottom: 24rpx;
}

.nav .content .recently .item-outer {
    display: flex;
    height: 220rpx;
}

.nav .content .recently .item-outer .item {
    position: relative;
    margin-right: 20rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
}

.nav .content .recently .item-outer .item image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}
.nav .content .recently .item-outer .item text {
    color: white;
   position: absolute;
   width: 100%;
   text-align: center;
   border-radius: 20rpx 20rpx 0 0;
   background-color:rgba(0, 0, 0, .6);
}

/* 其他 */
.nav .content .music {
    font-size: 30rpx;
    margin-top: 20rpx;
    height: 100rpx;
    background-color: rgb(255, 255, 255);
    border-radius: 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}